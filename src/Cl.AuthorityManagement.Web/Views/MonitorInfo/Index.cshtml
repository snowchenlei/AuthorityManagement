@using Cl.AuthorityManagement.Util;
@using Cl.AuthorityManagement.Model.Mvc;
@{
    PageInfo pageInfo = Resource.PageInfos["MonitorInfo"];

    ViewBag.Title = pageInfo.Title;
    ViewBag.AbsoluteUrl = pageInfo.AbsoluteUrl;
    Layout = pageInfo.Layout;
}

@section Style{
    <link href="~/Content/jsonView/jquery.jsonview.css" rel="stylesheet" />
    <link href="~/Content/customer/table-column-formater.css" rel="stylesheet" />
}
<!--搜索-->
<div class="panel-group" id="accordion">
    <div class="panel panel-info">
        <div class="panel-heading">
            <span style="font-size:16px;">查询条件</span>
            <span class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#searchPanel" style="float: right;">
                    <i id="searchTitle" class="glyphicon glyphicon-menu-up"></i>
                </a>
            </span>
        </div>
        <div id="searchPanel" class="panel-collapse collapse in">
            <div class="panel-body">
                <form id="formSearch" class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-1" for="txt_search_controller">控制器</label>
                        <div class="col-md-2">
                            <input type="text" class="form-control" id="txt_search_controller">
                        </div>
                        <label class="control-label col-md-1" for="txt_search_action">方法</label>
                        <div class="col-md-2">
                            <input type="text" class="form-control" id="txt_search_action">
                        </div>
                        <label class="control-label col-md-1" for="txt_search_requestMessage">请求信息</label>
                        <div class="col-md-2">
                            <input type="text" class="form-control" id="txt_search_requestMessage">
                        </div>
                        <label class="control-label col-md-1" for="txt_search_responseMessage">响应信息</label>
                        <div class="col-md-2">
                            <input type="text" class="form-control" id="txt_search_responseMessage">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-1" for="sel_search_application">日志类型</label>
                        <div class="col-md-2">
                            <select id="sel_search_application">
                                <option value="-1">请选择</option>
                            </select>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/Content/jsonView/jquery.jsonview.js"></script>
    <script src="~/Content/customer/showInfo.js"></script>
    <script src="~/Views/MonitorInfo/index.js"></script>
    <script type="text/javascript">
        applications = @Html.Raw(ViewBag.Applications);
    </script>
}
